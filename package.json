{
    "name": "gotagsight",
    "version": "1.0.0",
    "description": "Barcode Scanner App for QC and Inventory Management",
    "main": "dist/main.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
        "dev:main": "tsc -p tsconfig.main.json && electron .",
        "dev:renderer": "vite",
        "build": "npm run build:main && npm run build:renderer",
        "build:main": "tsc -p tsconfig.main.json",
        "build:renderer": "vite build",
        "dist": "electron-builder",
        "dist:win": "electron-builder --win",
        "dist:mac": "electron-builder --mac",
        "postinstall": "electron-builder install-app-deps",
        "setup": "node setup-config.js"
    },
    "keywords": [
        "barcode",
        "qc",
        "inventory",
        "electron"
    ],
    "author": "GoTagSight Team",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@vitejs/plugin-react": "^4.0.0",
        "concurrently": "^8.0.0",
        "electron": "^25.0.0",
        "electron-builder": "^24.0.0",
        "typescript": "^5.0.0",
        "vite": "^4.0.0"
    },
    "dependencies": {
        "electron-store": "^8.1.0",
        "mysql2": "^3.0.0",
        "quagga": "^0.12.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-pdf": "^7.0.0",
        "react-router-dom": "^6.8.0",
        "react-webcam": "^7.0.0",
        "xlsx": "^0.18.5"
    },
    "build": {
        "appId": "com.gotagsight.app",
        "productName": "GoTagSight",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "node_modules/**/*"
        ],
        "mac": {
            "category": "public.app-category.productivity"
        },
        "win": {
            "target": "nsis"
        }
    }
}
